{
  "name": "bowlofsoup/couchbase-access-layer",
  "description": "A simple Couchbase query builder.",
  "license": "MIT",
  "config": {
    "platform": {
      "php": "7.0"
    }
  },
  "require": {
    "ext-couchbase": "*",
    "ext-json": "*",
    "php": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "6.5.*",
    "php-coveralls/php-coveralls": "^2.1"
  },
  "autoload": {
    "psr-4": { "BowlOfSoup\\CouchbaseAccessLayer\\": "src" }
  },
  "autoload-dev": {
    "psr-4": { "BowlOfSoup\\CouchbaseAccessLayer\\Test\\": "tests" }
  }
}
